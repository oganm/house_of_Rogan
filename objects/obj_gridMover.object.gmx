phy_fixed_rotation = true
image_speed=0
gridSize = 32

// memory for future movement
//if has directions in they will be read one by one and excecuted
orders = ds_list_create();


dir = 2

downSprite = spr_controllable
upSprite = spr_controllable
leftSprite = spr_controllable
rightSprite = spr_controllable

sprites[3] = upSprite
