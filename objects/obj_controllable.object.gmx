            <kind>1</kind>
            <string>///fix rotation and set fixed speed to 0

phy_fixed_rotation = true
image_speed=0

moving = false

//settings of the walker
walkerSpeed  = 2 
gridSize = 32

// memory for future movement
orders = ds_list_create();

// to prevent orders being recorded immediately 
pauseTimers[3] = -1
pauseTimers[2] = -1
pauseTimers[1] = -1
pauseTimers[0] = -1


dirs[3] = 'up'
dirs[2] = 'down'
dirs[1] = 'right'
dirs[0] = 'left'


</string>
